<p id = "appointment-header">Slot Availability</p>

<div id="appointment-pane-right">
    <table id="seatTable">
        <tr>
            <th>Seat</th>
            <th>Status</th>
            <th>Reservee</th>
        </tr>
        {{#each seatsMap}}
         <tr>
            <td>{{@key}}</td>
            <td>{{this.class}}</td>
            <td>None</td>
        </tr>
        {{/each}}
    </table>
</div>
<input  type ="checkbox" 
        
        class = "availability">
<label  id ="cbLabel"
        class = "availability"
        > Show Only Available Slots
</label><br>

<div id ="appointment-pane-left">
    <div class = apptOptionContainer>
        <img    src = "images\icons\computer.png"
        class = "apptIcon">
        <p class = "appOptLabel">Room:</p>
        <select id = "roomSlotDropdown"
                class = "apptOption">
            <option value="Room GK101">Room GK101</option>
            <option value="Room GK202">Room GK202</option>
            <option value="Room GK302">Room GK302</option>
            <option value="Room GK304A">Room GK304A</option>
        </select>
    </div>
    <div class = apptOptionContainer>
        <img    src = "images\icons\calendar.png"
                class = "apptIcon">
        <p class = "appOptLabel">Date:</p>
        <input type = "date"
            id = "datePicker"
            class = "apptOption">
    </div>
    <div class = apptOptionContainer>
        <img    src = "images\icons\clock.png"
        class = "apptIcon">
        <p class = "appOptLabel">Time:</p>
        <select id="timeSlotDropdown"
                class = "apptOption">
            <option value="9:15 - 10:45">9:15 - 10:45</option>
            <option value="11:00 - 12:30">11:00 - 12:30</option>
            <option value="12:45 - 14:15">12:45 - 14:15</option>
            <option value="14:30 - 16:00">14:30 - 16:00</option>
            <option value="16:15 - 17:45">16:15 - 17:45</option>
        </select>
    </div>
</div>