<div class="main-content">
    <div class="reserveTableCont">
        <table class="reservationTable">
            <tr>
                <th class="seatNum">Seat Number</th>
                <th class="labCol">Lab</th>
                <th class="DTReq">Date & Time of Request</th>
                <th class="DTRes">Date & time of Reservation</th>
            </tr>

            {{#each reservations}}
                <tr>
                    <td>{{Slot}}</td>
                    <td>{{Room}}</td>
                    <td>{{DateTimeReq}}</td>
                    <td>{{DateTimeRes}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
</div>
